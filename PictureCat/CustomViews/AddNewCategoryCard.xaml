<UserControl x:Class="PictureCat.CustomViews.AddNewCategoryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureCat.CustomViews"
             mc:Ignorable="d" 
             Width="300" Height="270">
    <Border x:Name="ImageBorder" Style="{StaticResource MyAdditionalCardsBorderStyle}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="80" Height="80" Source="/CustomViews/add.png"/>
        </StackPanel>
    </Border>
</UserControl>
