<UserControl x:Class="PictureCat.CategoryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureCat"
             mc:Ignorable="d" 
             Width="300" Height="270">
    <Border x:Name="ImageBorder" Style="{StaticResource MyCategoryCardBorderStyle}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="NameTextBlock" Text="Category Name" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
